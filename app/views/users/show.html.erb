<p id="notice"><%= notice %></p>

<h1>ユーザー詳細ページ</h1>
<p>
  <strong>名前:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>管理者権限:</strong>
  <%= @user.admin %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detaile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detaile %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task, class: "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-success"  %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
